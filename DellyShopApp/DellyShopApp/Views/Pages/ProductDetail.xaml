ers>                                <TapGestureRecognizer Tapped="AddBasketButton" />                            </Label.GestureRecognizers>                        </Label>                    </Frame>                    <Frame x:Name="BuyNowbtn"                         Margin="0,-10,0,0"                        BackgroundColor="#E59500"                        Style="{DynamicResource ButtonFrameStyle}"                        VerticalOptions="EndAndExpand">                        <Frame.GestureRecognizers>                            <TapGestureRecognizer Tapped="BuyNow" />                        </Frame.GestureRecognizers>                        <Label                            Style="{DynamicResource ButtonLabelStyle}"                            Text="Buy Now"                            TextColor="Black">                            <Label.GestureRecognizers>                                <TapGestureRecognizer Tapped="BuyNow" />                            </Label.GestureRecognizers>                        </Label>                    </Frame>                                        <StackLayout>                        <StackLayout Orientation="Horizontal">                            <Label                        Margin="0,10,0,0"                        Padding="5,5,0,0"                        FontAttributes="Bold"                        FontFamily="{DynamicResource VerdanaProBold}"                        FontSize="22"                        HorizontalOptions="StartAndExpand"                        Text="Similar Products"                        TextColor= "Black"                        VerticalOptions="Start" />                        </StackLayout>                        <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal" Margin="0,0,0,10">                            <customControl:RepeaterView                        x:Name="PreviousViewedList"                        Orientation="Horizontal"                        Spacing="-5">                                <customControl:RepeaterView.ItemTemplate>                                    <DataTemplate>                                        <ViewCell>                                            <customView:PancakeView                                          Margin="5"                                        Padding="5"                                        BackgroundColor="White"                                        CornerRadius="8"                                        Elevation="2"                                        HasShadow="True"                                        HeightRequest="230"                                        HorizontalOptions="StartAndExpand"                                        VerticalOptions="StartAndExpand"                                        WidthRequest="{x:OnIdiom Tablet=150,                                                                 Phone=130}">                                                <customView:PancakeView.GestureRecognizers>                                                    <TapGestureRecognizer Tapped="ProductDetailClick" />                                                </customView:PancakeView.GestureRecognizers>                                                <StackLayout>                                                    <forms:CachedImage                                                Aspect="AspectFit"                                                HeightRequest="150"                                                Margin="5"                                                Source="{Binding Image}" />                                                    <Label                                                FontFamily="{DynamicResource VerdanaProRegular}"                                                Text="{Binding Title}"                                                TextColor="{DynamicResource WhiteDarkFontColor}"                                                VerticalOptions="Start"                                                LineBreakMode="TailTruncation"                                                MaxLines="1"/>                                                    <Label                                                FontFamily="{DynamicResource VerdanaProRegular}"                                                FontSize="10"                                                HorizontalOptions="Start"                                                Text="{Binding Brand}"                                                TextColor="{DynamicResource DescLabelColor}"                                                VerticalOptions="Start" />                                                    <Label                                                FontFamily="{DynamicResource VerdanaProBold}"                                                FontSize="15"                                                HorizontalOptions="EndAndExpand"                                                Text="{Binding Price, StringFormat='{0}₹'}"                                                TextColor="Black"                                                VerticalOptions="EndAndExpand" />                                                </StackLayout>                                            </customView:PancakeView>                                        </ViewCell>                                    </DataTemplate>                                </customControl:RepeaterView.ItemTemplate>                            </customControl:RepeaterView>                        </ScrollView>                          <!--<StackLayout Margin="10,0,10,10" Orientation="Horizontal">                            <Label                            Margin="10,0,10,0"                            FontAttributes="Bold"                            FontFamily="{DynamicResource VerdanaProRegular}"                            FontSize="40"                            HorizontalOptions="Start"                            Text="4.9"                            TextColor="black"                            VerticalOptions="CenterAndExpand" />                            <StackLayout VerticalOptions="CenterAndExpand">                                <customControl:RepeaterView x:Name="starListglobal" Orientation="Horizontal">                                    <customControl:RepeaterView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <Image                                                Aspect="AspectFit"                                                HeightRequest="20"                                                WidthRequest="20">                                                    <Image.Source>                                                        <FontImageSource                                                        FontFamily="{DynamicResource MaterialFontFamily}"                                                        Glyph="{Binding StarImg}"                                                        Size="20"                                                        Color="{DynamicResource FavStarColor}" />                                                    </Image.Source>                                                </Image>                                            </ViewCell>                                        </DataTemplate>                                    </customControl:RepeaterView.ItemTemplate>                                </customControl:RepeaterView>                                <Label                                FontFamily="{DynamicResource VerdanaProRegular}"                                FontSize="17"                                Text="{x:Static languages:AppResources.Commented}"                                TextColor="{DynamicResource DescLabelColor}" />                            </StackLayout>                        </StackLayout>                        <customControl:RepeaterView x:Name="CommentList" Padding="5">                            <customControl:RepeaterView.ItemTemplate>                                <DataTemplate>                                    <ViewCell>                                        <customView:PancakeView                                        Margin="0,10,0,0"                                        CornerRadius="15"                                        HeightRequest="120"                                        Style="{DynamicResource PancakeFrameStyle}">                                            <StackLayout>                                                <StackLayout Orientation="Horizontal">                                                    <StackLayout>                                                        <customControl:RepeaterView ItemsSource="{Binding Rates}" Orientation="Horizontal">                                                            <customControl:RepeaterView.ItemTemplate>                                                                <DataTemplate>                                                                    <ViewCell>                                                                        <Image                                                                        Aspect="AspectFit"                                                                        HeightRequest="20"                                                                        WidthRequest="20">                                                                            <Image.Source>                                                                                <FontImageSource                                                                                FontFamily="{DynamicResource MaterialFontFamily}"                                                                                Glyph="{Binding StarImg}"                                                                                Size="20"                                                                                Color="{DynamicResource FavStarColor}" />                                                                            </Image.Source>                                                                        </Image>                                                                    </ViewCell>                                                                </DataTemplate>                                                            </customControl:RepeaterView.ItemTemplate>                                                        </customControl:RepeaterView>                                                        <Label                                                        FontFamily="{DynamicResource VerdanaProSemiBold}"                                                        FontSize="15"                                                        Text="{Binding Name}"                                                        TextColor="Black"                                                        FontAttributes="Bold"/>                                                    </StackLayout>                                                    <StackLayout HorizontalOptions="EndAndExpand">                                                        <Label                                                        FontFamily="{DynamicResource VerdanaProLight}"                                                        FontSize="15"                                                        Text="{Binding CommentTime}"                                                        TextColor="{DynamicResource WhiteDarkFontColor}" />                                                    </StackLayout>                                                </StackLayout>                                                <Label                                                Margin="0"                                                FontFamily="{DynamicResource VerdanaProLight}"                                                Style="{DynamicResource ProfleLabelStyle}"                                                Text="{x:Static languages:AppResources.LoremComment}"                                                TextColor="{DynamicResource WhiteDarkFontColor}"                                                VerticalOptions="StartAndExpand" />                                            </StackLayout>                                        </customView:PancakeView>                                    </ViewCell>                                </DataTemplate>                            </customControl:RepeaterView.ItemTemplate>                        </customControl:RepeaterView>                        <Frame                        Margin="0,10,0,10"                        BackgroundColor="Chocolate"                        HorizontalOptions="CenterAndExpand"                        Style="{DynamicResource ButtonFrameStyle}"                        VerticalOptions="EndAndExpand"                        WidthRequest="150">                            <Frame.GestureRecognizers>                                <TapGestureRecognizer Tapped="CommentsPageClick" />                            </Frame.GestureRecognizers>                            <Label                            Style="{DynamicResource ButtonLabelStyle}"                            Text="{x:Static languages:AppResources.ViewAll}"                            TextColor="{DynamicResource LabelTextColor}">                                <Label.GestureRecognizers>                                    <TapGestureRecognizer Tapped="CommentsPageClick" />                                </Label.GestureRecognizers>                            </Label>                        </Frame>                        -->                        <!--<Button                            Margin="0,0,0,10"                            BackgroundColor="White"                            BorderColor="{DynamicResource MainColor}"                            BorderWidth="1"                            Clicked="CommentsPageClick"                            CornerRadius="20"                            FontFamily="{DynamicResource VerdanaProRegular}"                            FontSize="15"                            HeightRequest="40"                            HorizontalOptions="CenterAndExpand"                            MinimumWidthRequest="250"                            Text="View All"                            TextColor="{DynamicResource MainColor}" />-->                    </StackLayout>                </StackLayout>            </ScrollView>        </StackLayout>    </AbsoluteLayout></base:BasePage>