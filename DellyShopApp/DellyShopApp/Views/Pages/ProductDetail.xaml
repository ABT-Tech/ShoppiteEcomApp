diom Tablet='20,0,0,0',                                               Phone='10,0,0,0'}"                            Aspect="AspectFit"                            HeightRequest="30"  x:Name="minusimg"                            HorizontalOptions="End"                            VerticalOptions="CenterAndExpand"                            WidthRequest="30">                            <Image.GestureRecognizers>                                <TapGestureRecognizer Tapped="MinusClick" />                            </Image.GestureRecognizers>                            <Image.Source>                                <FontImageSource                                    FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Minus}"                                    Size="40"                                    Color="{DynamicResource DarkLabelTextColor}" />                            </Image.Source>                        </Image>                        <Label                            x:Name="ProductCountLabel"                            FontFamily="{DynamicResource VerdanaProLight}"                            FontSize="44"                            HorizontalOptions="End"                            Text="1"                            TextColor="{DynamicResource WhiteDarkFontColor}"                            VerticalOptions="CenterAndExpand" />                        <Image                            Aspect="AspectFit"                            HeightRequest="20"  x:Name="plusimg"                            HorizontalOptions="End"                            VerticalOptions="CenterAndExpand"                            WidthRequest="20">                            <Image.GestureRecognizers>                                <TapGestureRecognizer Tapped="PlusClick" />                            </Image.GestureRecognizers>                            <Image.Source>                                <FontImageSource                                     FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Plus}"                                    Size="45"                                    Color="{DynamicResource DarkLabelTextColor}" />                            </Image.Source>                        </Image>                    </StackLayout> <!--<StackLayout Orientation="Horizontal">                        <StackLayout>                            <Frame                                        Padding="0"                                        BorderColor="#EBEBEB"                                        CornerRadius="20"                                        HasShadow="False"                                        HorizontalOptions="FillAndExpand">                                <StackLayout                                            HorizontalOptions="FillAndExpand"                                            Orientation="Horizontal"                                            VerticalOptions="CenterAndExpand">                                    <Label                                                Margin="20,15,35,15"                                                FontSize="14"                                                HorizontalOptions="StartAndExpand"                                                Text="Size"                                                TextColor="Black"                                                VerticalTextAlignment="Center">                                        <Label.FontFamily>                                            <OnPlatform x:TypeArguments="x:String">                                                <On Platform="Android" Value="SFPro.ttf#Bold" />                                            </OnPlatform>                                        </Label.FontFamily>                                    </Label>                                    <Frame                                                Margin="0"                                                Padding="0"                                                BackgroundColor="Transparent"                                                HasShadow="False">                                        <Label                                                    x:Name="size"                                                    Margin="35,15,20,15"                                                    FontSize="14"                                                    HorizontalOptions="StartAndExpand"                                                    Text="XL"                                                    TextColor="Black"                                                    VerticalTextAlignment="Center">                                            <Label.FontFamily>                                                <OnPlatform x:TypeArguments="x:String">                                                    <On Platform="Android" Value="SFPro.ttf#Bold" />                                                </OnPlatform>                                            </Label.FontFamily>                                        </Label>                                        <Frame.GestureRecognizers>                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />                                        </Frame.GestureRecognizers>                                    </Frame>                                </StackLayout>                            </Frame>                        </StackLayout>                    </StackLayout>-->                    <!--<ScrollView Orientation="Horizontal" Style="{DynamicResource ScrollViewStyle}">                        <customControl:RepeaterView                        x:Name="CategoryList"                        Orientation="Horizontal"   