<?xml version="1.0" encoding="utf-8" ?><base:BasePage    x:Class="DellyShopApp.Views.Pages.ProductDetail"    xmlns="http://xamarin.com/schemas/2014/forms"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    xmlns:base="clr-namespace:DellyShopApp.Views.Pages.Base"    xmlns:customControl="clr-namespace:DellyShopApp.CustomControl;assembly=DellyShopApp"    xmlns:font="clr-namespace:DellyShopApp.Helpers;assembly=DellyShopApp"    xmlns:controls="clr-namespace:DellyShopApp.Views.CustomView"    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"    xmlns:iOsSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"    xmlns:languages="clr-namespace:DellyShopApp.Languages;assembly=DellyShopApp"    xmlns:customView="clr-namespace:DellyShopApp.Views.CustomView"        xmlns:pancakeView="clr-namespace:DellyShopApp.Views.CustomView"
    xmlns:partialViews="clr-namespace:DellyShopApp.Views.PartialViews;assembly=DellyShopApp"    xmlns:proc="clr-namespace:DellyShopApp.Processors"
    xmlns:local="clr-namespace:TestApp.CustomControl"
    iOsSpecific:Page.UseSafeArea="True"    BackgroundColor="White"    NavigationPage.HasNavigationBar="False"    Visual="Material">    <AbsoluteLayout>        <StackLayout            Margin="15,20,15,0"            Padding="2"            AbsoluteLayout.LayoutBounds="1,1,1,1"            AbsoluteLayout.LayoutFlags="All">                                 <StackLayout                x:Name="NavbarStack"                BackgroundColor="{DynamicResource BackgroundColor}"                HorizontalOptions="FillAndExpand"                IsVisible="False"                Orientation="Horizontal"                VerticalOptions="Start">                <Image                    Aspect="AspectFit"                    HeightRequest="50"                    Source="{Binding Image}"                    WidthRequest="50" />                                <StackLayout VerticalOptions="CenterAndExpand">                    <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Text="{Binding Title}"                        TextColor="{DynamicResource WhiteDarkFontColor}"                         MaxLines="1"                        WidthRequest="320"                        LineBreakMode="TailTruncation"/>                </StackLayout>                <Label                    Margin="0,0,10,0"                    FontAttributes="Bold"                    FontFamily="{DynamicResource VerdanaProRegular}"                    FontSize="16"                    WidthRequest="120"                    MaxLines="1"                    HorizontalOptions="EndAndExpand"                    Text="{Binding Price, StringFormat='{0}₹'}"                    TextColor="Black"                    VerticalOptions="Center" />                           </StackLayout>            <ScrollView                x:Name="MainScroll"                Scrolled="MainScroll_Scrolled"                Style="{DynamicResource ScrollViewStyle}">                <StackLayout>                    <StackLayout>                        <StackLayout HorizontalOptions="End" >                            <Image  Aspect="AspectFit"                                     x:Name="myImage"                                   HeightRequest="30"                                   WidthRequest="30"                                                                       Source="black.png">                                <Image.GestureRecognizers>                                    <TapGestureRecognizer                                         Tapped="Imgtapp"/>                                </Image.GestureRecognizers>                            </Image>                        </StackLayout>                    </StackLayout>                    <customView:PancakeView                        Margin="0,0,0,0"                        Padding="0"                        CornerRadius="8"                        Elevation="0"                        HasShadow="False">                        <customView:CarouselView                            x:Name="CarouselView"                            Margin="0,0,0,0"                            BackgroundColor="Transparent"                            HeightRequest="{x:OnIdiom Tablet=350,                                                      Phone=300}"                            SelectedIndex="0"                                                         ItemsSource="{Binding ProductList}"                            WidthRequest="300">                            <x:Arguments>                                <proc:BaseCarouselFrontViewProcessor                                    OpacityFactor="0.5"                                    RotationFactor="0"                                    ScaleFactor=".8" />                                <proc:BaseCarouselBackViewProcessor                                    OpacityFactor="0.5"                                    RotationFactor="0"                                    ScaleFactor=".8" />                            </x:Arguments>                            <customControl:IndicatorsControl SelectedIndicatorStyle="{StaticResource ActiveIndicator}" UnselectedIndicatorStyle="{DynamicResource InactiveIndicator}" />                            <customView:CarouselView.ItemTemplate>                                <DataTemplate>                                    <ContentView>                                        <forms:CachedImage                                            Margin="0"                                            Aspect="AspectFit"                                            Source="{Binding .}"/>                                    </ContentView>                                </DataTemplate>                            </customView:CarouselView.ItemTemplate>                        </customView:CarouselView>                    </customView:PancakeView>                    <!--<StackLayout Orientation="Horizontal">                        <customControl:RepeaterView                            x:Name="starList"                            HorizontalOptions="Start"                            Orientation="Horizontal">                            <customControl:RepeaterView.ItemTemplate>                                <DataTemplate>                                    <ViewCell>                                        <Image                                            Aspect="AspectFit"                                            HeightRequest="20"                                            WidthRequest="20">                                            <Image.Source>                                                <FontImageSource                                                    FontFamily="{DynamicResource MaterialFontFamily}"                                                    Glyph="{Binding StarImg}"                                                    Size="20"                                                    Color="{DynamicResource FavStarColor}" />                                            </Image.Source>                                        </Image>                                    </ViewCell>                                </DataTemplate>                            </customControl:RepeaterView.ItemTemplate>                        </customControl:RepeaterView>                        <Label                            FontFamily="{DynamicResource VerdanaProRegular}"                            FontSize="17"                            Text="(4.9)"                            TextColor="Black"                            VerticalOptions="CenterAndExpand" />                    </StackLayout>-->                    <StackLayout Orientation="Horizontal">                        <StackLayout HorizontalOptions="FillAndExpand">                            <StackLayout>                                <Label                                FontFamily="{DynamicResource VerdanaProBold}"                                FontSize="16"                                Text="{Binding Title}"                                TextColor="Black"                                VerticalOptions="Start" />                                 <Label                                FontFamily="{DynamicResource VerdanaProRegular}"                                FontSize="16"                                HorizontalOptions="Start"                                Text="{Binding Brand}"                                TextColor="Gray"                                VerticalOptions="Start" />                                                           </StackLayout>                            <StackLayout Orientation="Horizontal">                                <Label FontAttributes="Bold"                                FontSize="22"                                 HorizontalOptions="Start"                                Text="-10% Discount"                                TextColor="#dc003a"/>                                <Label Text="In Stock"                                       HorizontalOptions="EndAndExpand" x:Name="stock"                                       Margin="2,0,2,0" Padding="5,5,5,5"  FontFamily="{DynamicResource VerdanaProRegular}"                                       FontSize="16" FontAttributes="Bold" TextColor="White" BackgroundColor="#00c58a"/>                                <Label Text="Out Stock"                                       HorizontalOptions="EndAndExpand" x:Name="Stocklbl" IsVisible="false"                                       Margin="2,0,2,0" Padding="5,5,5,5"  FontFamily="{DynamicResource VerdanaProRegular}"                                       FontSize="16" FontAttributes="Bold" TextColor="White" BackgroundColor="#dc003a"/>                            </StackLayout>                            <StackLayout Orientation="Horizontal">
                                <Label                            FontFamily="{DynamicResource VerdanaProBold}"                            FontSize="16"                             HorizontalOptions="Start"  IsVisible="{Binding OldPrice}"                            Text="{Binding OldPrice}"                                    TextDecorations="Strikethrough"                            TextColor="#dc003a"                            VerticalOptions="CenterAndExpand" />
                                <Label                            FontFamily="{DynamicResource VerdanaProBold}"                            FontSize="22"                             HorizontalOptions="Start"                            Text="{Binding Price, StringFormat='{0}₹'}"                            TextColor="Black"                            VerticalOptions="CenterAndExpand" />
                                <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal" VerticalOptions="StartAndExpand">                                    <Image                            Margin="{x:OnIdiom Tablet='20,0,0,0',                                               Phone='10,0,0,0'}"                            Aspect="AspectFit"                            HeightRequest="30"  x:Name="minusimg"                            HorizontalOptions="End"                            VerticalOptions="CenterAndExpand"                            WidthRequest="30">                                        <Image.GestureRecognizers>                                            <TapGestureRecognizer Tapped="MinusClick" />                                        </Image.GestureRecognizers>                                        <Image.Source>                                            <FontImageSource                                    FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Minus}"                                    Size="40"                                    Color="#00c58a" />                                        </Image.Source>                                    </Image>                                    <Label                            x:Name="ProductCountLabel"                            FontFamily="{DynamicResource VerdanaProLight}"                            FontSize="35"                            HorizontalOptions="End"                            Text="1"                            TextColor="{DynamicResource WhiteDarkFontColor}"                            VerticalOptions="CenterAndExpand" />                                    <Image                            Aspect="AspectFit"                            HeightRequest="20"  x:Name="plusimg"                            HorizontalOptions="End"                            VerticalOptions="CenterAndExpand"                            WidthRequest="20">                                        <Image.GestureRecognizers>                                            <TapGestureRecognizer Tapped="PlusClick" />                                        </Image.GestureRecognizers>                                        <Image.Source>                                            <FontImageSource                                     FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Plus}"                                    Size="45"                                    Color="#00c58a" />                                        </Image.Source>                                    </Image>                                </StackLayout>
                            </StackLayout>                                                   </StackLayout>                    </StackLayout>                    <!--<Label                        Margin="5,5,5,5"                        FontFamily="{DynamicResource VerdanaProCondLight}"                        FontSize="15"                        TextColor="{DynamicResource WhiteDarkFontColor}">                        <Label.FormattedText>                            <FormattedString>                                <Span Text="{Binding Description}" />                            </FormattedString>                        </Label.FormattedText>                    </Label>-->
                    <Label Text="Highlights" 
                           TextColor="#00c58a"
                           FontAttributes="Bold"
                           FontSize="18"/>
                    <local:CustomLabel  Text="{Binding Description}"/>
                    <pancakeView:PancakeView CornerRadius="8"
                                             BackgroundColor="WhiteSmoke">
                        <StackLayout Margin="5,10,5,10" BackgroundColor="WhiteSmoke">                        <StackLayout Orientation="Horizontal">                                <Label Text="Deliver to :-" TextColor="#00c58a" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />                            <Label Text="User123@gmail.com" FontSize="16"  VerticalOptions="Center"/>                        </StackLayout>                        <StackLayout>                            <Label Text="Titenum city center, Anand Nagar Main Road,Prahlad nagar,Ahemdabad,Gujarat,India "                                   VerticalOptions="Center" FontSize="16"/>                        </StackLayout>                    </StackLayout>                    </pancakeView:PancakeView>
                    <StackLayout Orientation="Horizontal">
                            <Label 
                        Margin="0,10,0,0"
                        Padding="5,5,0,0"
                        FontAttributes="Bold"
                        FontFamily="{DynamicResource VerdanaProBold}"
                        FontSize="22"
                        HorizontalOptions="StartAndExpand"
                        Text="May You Like This"
                        TextColor= "Black"
                        VerticalOptions="Start" />

                        </StackLayout>
                    <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                        <customControl:RepeaterView
                        x:Name="PreviousViewedList"
                        Orientation="Horizontal"
                        Spacing="-5">
                            <customControl:RepeaterView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <pancakeView:PancakeView  
                                        Margin="5"
                                        Padding="5"
                                        BackgroundColor="White"
                                        CornerRadius="8"
                                        Elevation="2"
                                        HasShadow="True"
                                        HeightRequest="230"
                                        HorizontalOptions="StartAndExpand"
                                        VerticalOptions="StartAndExpand"
                                        WidthRequest="{x:OnIdiom Tablet=150,
                                                                 Phone=130}">

                                            <pancakeView:PancakeView.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                            </pancakeView:PancakeView.GestureRecognizers>
                                            <StackLayout>
                                                <forms:CachedImage
                                                Aspect="AspectFit"
                                                HeightRequest="150"
                                                Margin="5"
                                                Source="{Binding Image}" />
                                                <Label
                                                FontFamily="{DynamicResource VerdanaProRegular}"
                                                Text="{Binding Title}"
                                               
                                                TextColor="{DynamicResource WhiteDarkFontColor}"
                                                VerticalOptions="Start"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="1"/>
                                                <Label
                                                FontFamily="{DynamicResource VerdanaProRegular}"
                                                FontSize="10"
                                                HorizontalOptions="Start"
                                                Text="{Binding Brand}"
                                                TextColor="{DynamicResource DescLabelColor}"
                                                VerticalOptions="Start" />

                                                <Label
                                                FontFamily="{DynamicResource VerdanaProBold}"
                                                FontSize="15"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding Price, StringFormat='{0}₹'}"
                                                TextColor="Black"
                                                VerticalOptions="EndAndExpand" />
                                            </StackLayout>
                                        </pancakeView:PancakeView>
                                    </ViewCell>
                                </DataTemplate>
                            </customControl:RepeaterView.ItemTemplate>
                        </customControl:RepeaterView>
                    </ScrollView>
                                        <!--<Frame x:Name="Addtocartbtn"                        Margin="0,20,0,20"                         BackgroundColor="#E1BC29"                                                      Style="{DynamicResource ButtonFrameStyle}"                        VerticalOptions="EndAndExpand">                        <Frame.GestureRecognizers>                            <TapGestureRecognizer Tapped="AddBasketButton" />                        </Frame.GestureRecognizers>                        <Label                            Style="{DynamicResource ButtonLabelStyle}"                            Text="Add To Cart" xct:TouchEffect.AnimationDuration="250"                                                               xct:TouchEffect.PressedScale="0.75"                                                               xct:TouchEffect.PressedOpacity="0.6"                            TextColor="Black">                            <Label.GestureRecognizers>                                <TapGestureRecognizer Tapped="AddBasketButton" />                            </Label.GestureRecognizers>                        </Label>                    </Frame>                    <Frame x:Name="BuyNowbtn"                         Margin="0,-10,0,0"                        BackgroundColor="#E59500"                        Style="{DynamicResource ButtonFrameStyle}"                        VerticalOptions="EndAndExpand">                        <Frame.GestureRecognizers>                            <TapGestureRecognizer Tapped="BuyNow" />                        </Frame.GestureRecognizers>                        <Label  xct:TouchEffect.AnimationDuration="250"                                                               xct:TouchEffect.PressedScale="0.75"                                                               xct:TouchEffect.PressedOpacity="0.6"                            Style="{DynamicResource ButtonLabelStyle}"                            Text="Buy Now"                            TextColor="Black">                            <Label.GestureRecognizers>                                <TapGestureRecognizer Tapped="BuyNow" />                            </Label.GestureRecognizers>                        </Label>                    </Frame>-->                    <!--<StackLayout Margin="10,0,10,10" Orientation="Horizontal">                            <Label                            Margin="10,0,10,0"                            FontAttributes="Bold"                            FontFamily="{DynamicResource VerdanaProRegular}"                            FontSize="40"                            HorizontalOptions="Start"                            Text="4.9"                            TextColor="black"                            VerticalOptions="CenterAndExpand" />                            <StackLayout VerticalOptions="CenterAndExpand">                                <customControl:RepeaterView x:Name="starListglobal" Orientation="Horizontal">                                    <customControl:RepeaterView.ItemTemplate>                                        <DataTemplate>                                            <ViewCell>                                                <Image                                                Aspect="AspectFit"                                                HeightRequest="20"                                                WidthRequest="20">                                                    <Image.Source>                                                        <FontImageSource                                                        FontFamily="{DynamicResource MaterialFontFamily}"                                                        Glyph="{Binding StarImg}"                                                        Size="20"                                                        Color="{DynamicResource FavStarColor}" />                                                    </Image.Source>                                                </Image>                                            </ViewCell>                                        </DataTemplate>                                    </customControl:RepeaterView.ItemTemplate>                                </customControl:RepeaterView>                                <Label                                FontFamily="{DynamicResource VerdanaProRegular}"                                FontSize="17"                                Text="{x:Static languages:AppResources.Commented}"                                TextColor="{DynamicResource DescLabelColor}" />                            </StackLayout>                        </StackLayout>                        <customControl:RepeaterView x:Name="CommentList" Padding="5">                            <customControl:RepeaterView.ItemTemplate>                                <DataTemplate>                                    <ViewCell>                                        <customView:PancakeView                                        Margin="0,10,0,0"                                        CornerRadius="15"                                        HeightRequest="120"                                        Style="{DynamicResource PancakeFrameStyle}">                                            <StackLayout>                                                <StackLayout Orientation="Horizontal">                                                    <StackLayout>                                                        <customControl:RepeaterView ItemsSource="{Binding Rates}" Orientation="Horizontal">                                                            <customControl:RepeaterView.ItemTemplate>                                                                <DataTemplate>                                                                    <ViewCell>                                                                        <Image                                                                        Aspect="AspectFit"                                                                        HeightRequest="20"                                                                        WidthRequest="20">                                                                            <Image.Source>                                                                                <FontImageSource                                                                                FontFamily="{DynamicResource MaterialFontFamily}"                                                                                Glyph="{Binding StarImg}"                                                                                Size="20"                                                                                Color="{DynamicResource FavStarColor}" />                                                                            </Image.Source>                                                                        </Image>                                                                    </ViewCell>                                                                </DataTemplate>                                                            </customControl:RepeaterView.ItemTemplate>                                                        </customControl:RepeaterView>                                                        <Label                                                        FontFamily="{DynamicResource VerdanaProSemiBold}"                                                        FontSize="15"                                                        Text="{Binding Name}"                                                        TextColor="Black"                                                        FontAttributes="Bold"/>                                                    </StackLayout>                                                    <StackLayout HorizontalOptions="EndAndExpand">                                                        <Label                                                        FontFamily="{DynamicResource VerdanaProLight}"                                                        FontSize="15"                                                        Text="{Binding CommentTime}"                                                        TextColor="{DynamicResource WhiteDarkFontColor}" />                                                    </StackLayout>                                                </StackLayout>                                                <Label                                                Margin="0"                                                FontFamily="{DynamicResource VerdanaProLight}"                                                Style="{DynamicResource ProfleLabelStyle}"                                                Text="{x:Static languages:AppResources.LoremComment}"                                                TextColor="{DynamicResource WhiteDarkFontColor}"                                                VerticalOptions="StartAndExpand" />                                            </StackLayout>                                        </customView:PancakeView>                                    </ViewCell>                                </DataTemplate>                            </customControl:RepeaterView.ItemTemplate>                        </customControl:RepeaterView>                        <Frame                        Margin="0,10,0,10"                        BackgroundColor="Chocolate"                        HorizontalOptions="CenterAndExpand"                        Style="{DynamicResource ButtonFrameStyle}"                        VerticalOptions="EndAndExpand"                        WidthRequest="150">                            <Frame.GestureRecognizers>                                <TapGestureRecognizer Tapped="CommentsPageClick" />                            </Frame.GestureRecognizers>                            <Label                            Style="{DynamicResource ButtonLabelStyle}"                            Text="{x:Static languages:AppResources.ViewAll}"                            TextColor="{DynamicResource LabelTextColor}">                                <Label.GestureRecognizers>                                    <TapGestureRecognizer Tapped="CommentsPageClick" />                                </Label.GestureRecognizers>                            </Label>                        </Frame>                        -->
                    <!--<Button                            Margin="0,0,0,10"                            BackgroundColor="White"                            BorderColor="{DynamicResource MainColor}"                            BorderWidth="1"                            Clicked="CommentsPageClick"                            CornerRadius="20"                            FontFamily="{DynamicResource VerdanaProRegular}"                            FontSize="15"                            HeightRequest="40"                            HorizontalOptions="CenterAndExpand"                            MinimumWidthRequest="250"                            Text="View All"                            TextColor="{DynamicResource MainColor}" />-->                </StackLayout>
            </ScrollView>           
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Margin="-10,5,-10,5">                    <StackLayout Orientation="Vertical" Spacing="0" HorizontalOptions="FillAndExpand">                        <Button Text="Go To Cart"                                    CornerRadius="0"                                    x:Name="gotocart"                                     IsVisible="false" WidthRequest="50"                                    HeightRequest="50"                                     FontSize="15" FontAttributes="Bold"                                    TextColor="Black"                                    Clicked="gotocart_Clicked"                                    BackgroundColor="White"/>                        <Button Text="Add to cart"                                     IsVisible="true" FontAttributes="Bold"                                    CornerRadius="0" WidthRequest="50"                                    x:Name="Addtocartbtn"                                     HeightRequest="50"                                    FontSize="15"                                    TextColor="Black"                                    Clicked="AddBasketButton"                                    BackgroundColor="White"/>                    </StackLayout>                    <StackLayout Orientation="Vertical" Spacing="0" HorizontalOptions="FillAndExpand">                        <Button Text="Buy now"                                    CornerRadius="0"                                    x:Name="BuyNowbtn" WidthRequest="50"                                    TextColor="Black" FontAttributes="Bold"                                    FontSize="15"                                     Clicked="BuyNow"                                    HeightRequest="50"                                     BackgroundColor="#00c58a"/>                    </StackLayout>                </StackLayout>
        </StackLayout>    </AbsoluteLayout></base:BasePage>