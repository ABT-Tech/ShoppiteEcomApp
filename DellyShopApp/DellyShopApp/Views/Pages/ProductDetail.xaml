and" />                    </StackLayout>-->                    <StackLayout Orientation="Horizontal">                        <StackLayout HorizontalOptions="StartAndExpand" >                            <Label                                FontFamily="{DynamicResource VerdanaProBold}"                                FontSize="22"                                Text="{Binding Title}"                                TextColor="Black"                                VerticalOptions="Start" />                            <Label                                FontFamily="{DynamicResource VerdanaProRegular}"                                FontSize="17"                                HorizontalOptions="Start"                                Text="{Binding Brand}"                                TextColor="Black"                                VerticalOptions="Start" />                            <Label                            FontFamily="{DynamicResource VerdanaProBold}"                            FontSize="20"                            HorizontalOptions="Start"                            Text="{Binding Price, StringFormat='{0} ₹'}"                            TextColor="Black"                            VerticalOptions="StartAndExpand" />                        </StackLayout>                    </StackLayout>                      <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">                        <customControl:RepeaterView                        x:Name="AttributeName"                        Orientation="Horizontal"                        Spacing="5">                            <customControl:RepeaterView.ItemTemplate>                                <DataTemplate>                                    <ViewCell>                                        <customView:PancakeView                                        Margin="4,5,4,5"                                        BackgroundColor="#D8D8D8"                