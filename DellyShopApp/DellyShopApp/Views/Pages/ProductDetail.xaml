<?xml version="1.0" encoding="utf-8" ?><base:BasePage    x:Class="DellyShopApp.Views.Pages.ProductDetail"    xmlns="http://xamarin.com/schemas/2014/forms"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    xmlns:base="clr-namespace:DellyShopApp.Views.Pages.Base"    xmlns:customControl="clr-namespace:DellyShopApp.CustomControl;assembly=DellyShopApp"    xmlns:font="clr-namespace:DellyShopApp.Helpers;assembly=DellyShopApp"    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"    xmlns:iOsSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"    xmlns:languages="clr-namespace:DellyShopApp.Languages;assembly=DellyShopApp"    xmlns:customView="clr-namespace:DellyShopApp.Views.CustomView"    xmlns:partialViews="clr-namespace:DellyShopApp.Views.PartialViews;assembly=DellyShopApp"    xmlns:proc="clr-namespace:DellyShopApp.Processors" xmlns:local="clr-namespace:TestApp.CustomControl"    iOsSpecific:Page.UseSafeArea="True"    BackgroundColor="White"    NavigationPage.HasNavigationBar="False"    Visual="Material">    <AbsoluteLayout>        <StackLayout            Margin="15,20,15,0"            Padding="2"            AbsoluteLayout.LayoutBounds="1,1,1,1"            AbsoluteLayout.LayoutFlags="All">                        <partialViews:NavigationBarPartialView                x:Name="Navbar" NavigationTitle="{x:Static languages:AppResources.ProductDetail}"  BackButtonVisibler="True" IsModalpage="False" FavVisible="False" >            </partialViews:NavigationBarPartialView>            <StackLayout                x:Name="NavbarStack"                BackgroundColor="{DynamicResource BackgroundColor}"                HorizontalOptions="FillAndExpand"                IsVisible="False"                Orientation="Horizontal"                VerticalOptions="Start">                <Image                    Aspect="AspectFit"                    HeightRequest="50"                    Source="{Binding Image}"                    WidthRequest="50" />                                <StackLayout VerticalOptions="CenterAndExpand">                    <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Text="{Binding Title}"                        TextColor="{DynamicResource WhiteDarkFontColor}"                         MaxLines="1"                        WidthRequest="320"                        LineBreakMode="TailTruncation"/>                </StackLayout>                <Label                    Margin="0,0,10,0"                    FontAttributes="Bold"                    FontFamily="{DynamicResource VerdanaProRegular}"                    FontSize="16"                    WidthRequest="120"                    MaxLines="1" HorizontalTextAlignment="End"                    HorizontalOptions="EndAndExpand"                    Text="{Binding Price, StringFormat='{0}₹'}"                    TextColor="Black"                    VerticalOptions="Center" />                           </StackLayout>            <ScrollView                x:Name="MainScroll"                Scrolled="MainScroll_Scrolled"                Style="{DynamicResource ScrollViewStyle}">                <StackLayout>                    <customView:PancakeView                        Margin="0,10,0,0"                        Padding="0"                        CornerRadius="8"                        Elevation="0"                        HasShadow="False">                        <customView:CarouselView                            x:Name="CarouselView"                            Margin="0,0,0,0"                            BackgroundColor="Transparent"                            HeightRequest="{x:OnIdiom Tablet=350,                                                      Phone=200}"                            SelectedIndex="0"                              ItemsSource="{Binding ProductList}"                            WidthRequest="300">                            <x:Arguments>                                <proc:BaseCarouselFrontViewProcessor                                    OpacityFactor="0.5"                                    RotationFactor="0"                                    ScaleFactor=".8" />                                <proc:BaseCarouselBackViewProcessor                                    OpacityFactor="0.5"                                    RotationFactor="0"                                    ScaleFactor=".8" />                            </x:Arguments>                            <customControl:IndicatorsControl SelectedIndicatorStyle="{StaticResource ActiveIndicator}" UnselectedIndicatorStyle="{DynamicResource InactiveIndicator}" />                            <customView:CarouselView.ItemTemplate>                                <DataTemplate>                                    <ContentView>                                        <forms:CachedImage                                            Margin="0"                                            Aspect="AspectFit"                                            Source="{Binding .}"/>                                    </ContentView>                                </DataTemplate>                            </customView:CarouselView.ItemTemplate>                        </customView:CarouselView>                    </customView:PancakeView>                    <StackLayout>                        <StackLayout HorizontalOptions="End" >                            <Image  Aspect="AspectFit"                                     x:Name="myImage"                                   HeightRequest="35"                                   WidthRequest="35"                                                                       Source="black.png">                                <Image.GestureRecognizers>                                    <TapGes