<?xml version="1.0" encoding="utf-8" ?><base:BasePage    x:Class="DellyShopApp.Views.Pages.MyCartPage"    xmlns="http://xamarin.com/schemas/2014/forms"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    xmlns:base="clr-namespace:DellyShopApp.Views.Pages.Base;assembly=DellyShopApp"    xmlns:customControl="clr-namespace:DellyShopApp.CustomControl"    xmlns:font="clr-namespace:DellyShopApp.Helpers;assembly=DellyShopApp"    xmlns:iOsSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"    xmlns:pancakeView="clr-namespace:DellyShopApp.Views.CustomView"    xmlns:partialViews="clr-namespace:DellyShopApp.Views.PartialViews;assembly=DellyShopApp"    iOsSpecific:Page.UseSafeArea="True"     xmlns:languages="clr-namespace:DellyShopApp.Languages"    BackgroundColor="LightBlue"    NavigationPage.HasNavigationBar="False">    <ScrollView>        <StackLayout Margin="10">            <partialViews:NavigationBarPartialView            BackButtonVisibler="True"            FavVisible="False"            IsModalpage="False"            NavigationTitle="My Cart"/>            <customControl:RepeaterView x:Name="BasketItems">                <customControl:RepeaterView.ItemTemplate>                    <DataTemplate>                        <ViewCell >                            <pancakeView:PancakeView Margin="0,5,0,0" HeightRequest="100" Style="{DynamicResource PancakeFrameStyle}" >                                <pancakeView:PancakeView.GestureRecognizers>                                    <TapGestureRecognizer Tapped="ClickItem" />                                </pancakeView:PancakeView.GestureRecognizers>                                <StackLayout                                BackgroundColor="White"                                Orientation="Horizontal"                                VerticalOptions="Center">                                    <pancakeView:PancakeView                                    Padding="0"                                    HorizontalOptions="End"                                    Style="{DynamicResource PancakeFrameStyle}"                                    VerticalOptions="FillAndExpand">                                        <Image                                         Aspect="AspectFill"                                        HeightRequest="60"                                        Source="{Binding Image}"                                        WidthRequest="100" />                                    </pancakeView:PancakeView>                                    <StackLayout  WidthRequest="200">                                                                               <Label VerticalOptions="StartAndExpand"                                           HorizontalOptions="FillAndExpand"                                        FontFamily="{DynamicResource VerdanaProRegular}"                                        FontSize="18"                                        LineBreakMode="TailTruncation"                                        Text="{Binding Title}"                                        MaxLines="1"                                        TextColor="{DynamicResource WhiteDarkFontColor}"/>                                                                               <Label VerticalOptions="CenterAndExpand"                                           HorizontalOptions="FillAndExpand"                                        FontFamily="{DynamicResource VerdanaProRegular}"                                        FontSize="14"                                        Text="{Binding Brand}"                                        TextColor="Gray" />                                                                               <Label Margin="0,0,10,0"                                         FontAttributes="Bold"                                         FontFamily="{DynamicResource VerdanaProRegular}"                                         FontSize="22"                                         HorizontalOptions="FillAndExpand"                                         Text="{Binding Price, StringFormat='{0}₹'}"                                         TextColor="Red"                                         MaxLines="1"                                         VerticalOptions="EndAndExpand" />                                    </StackLayout>                                    <StackLayout Orientation="Horizontal" HorizontalOptions="End">                                        <Image  Margin="{x:OnIdiom Tablet='0,0,10,0',                                               Phone='0,0,10,0'}"                            Aspect="AspectFit"                            HeightRequest="20"                            HorizontalOptions="Start"                            VerticalOptions="CenterAndExpand"                            WidthRequest="20">                                            <Image.GestureRecognizers>                                                <TapGestureRecognizer Tapped="MinusClick" />                                            </Image.GestureRecognizers>                                            <Image.Source>                                                <FontImageSource                                    FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Minus}"                                    Size="10"                                    Color="#E59500" />                                            </Image.Source>                                        </Image>                                        <Label WidthRequest="35"                            x:Name="MyCartCountLable"                            FontFamily="{DynamicResource VerdanaProLight}"                            FontSize="25"                            HorizontalOptions="Center"                            Text="1"                            TextColor="{DynamicResource WhiteDarkFontColor}"                            VerticalOptions="CenterAndExpand" />                                        <Image                                     Margin="{x:OnIdiom Tablet='0,0,10,0',                                               Phone='0,0,10,0'}"                            Aspect="AspectFit"                            HeightRequest="20"                            HorizontalOptions="End"                            VerticalOptions="CenterAndExpand"                            WidthRequest="20">                                            <Image.GestureRecognizers>                                                <TapGestureRecognizer Tapped="PlusClick" />                                            </Image.GestureRecognizers>                                            <Image.Source>                                                <FontImageSource                                    FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="{x:Static font:FontAwesomeIcons.Plus}"                                    Size="10"                                    Color="#E59500" />                                            </Image.Source>                                        </Image>                                    </StackLayout>                                </StackLayout>                            </pancakeView:PancakeView>                        </ViewCell>                    </DataTemplate>                </customControl:RepeaterView.ItemTemplate>            </customControl:RepeaterView>            <StackLayout  VerticalOptions="End">                <Frame                    Margin="30"                    BackgroundColor="#E59500"                    Style="{DynamicResource ButtonFrameStyle}">                    <Frame.GestureRecognizers>                        <TapGestureRecognizer Tapped="Button_Clicked" />                    </Frame.GestureRecognizers>                    <Image                            Grid.Column="0"                            Aspect="AspectFill"                            HorizontalOptions="CenterAndExpand"                            VerticalOptions="CenterAndExpand">                        <Image.Source>                            <FontImageSource                                    FontFamily="{DynamicResource MaterialFontFamily}"                                    Glyph="Process To CheckOut"                                    Size="20"                                    Color="Black" />                        </Image.Source>                    </Image>                </Frame>            </StackLayout>        </StackLayout>    </ScrollView></base:BasePage> 