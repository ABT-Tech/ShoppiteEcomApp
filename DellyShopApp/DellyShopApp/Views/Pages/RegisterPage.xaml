<?xml version="1.0" encoding="utf-8" ?><base:BasePage    x:Class="DellyShopApp.Views.Pages.RegisterPage"    xmlns="http://xamarin.com/schemas/2014/forms"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    xmlns:base="clr-namespace:DellyShopApp.Views.Pages.Base"    xmlns:font="clr-namespace:DellyShopApp.Helpers;assembly=DellyShopApp"    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"    xmlns:helpers="clr-namespace:DellyShopApp.Languages"    xmlns:iOsSpecific="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"    xmlns:local="clr-namespace:ShowHidePasswordTrigger"    xmlns:pancakeView="clr-namespace:DellyShopApp.Views.CustomView"    xmlns:renderers="clr-namespace:DellyShopApp.Renderers;assembly=DellyShopApp"    iOsSpecific:Page.UseSafeArea="False"    BackgroundColor="#f5f5f5"    NavigationPage.HasNavigationBar="False"    Visual="Material">        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">            <forms:CachedImage                Aspect="AspectFill"                HorizontalOptions="FillAndExpand"                Source="BgImage.png"                VerticalOptions="FillAndExpand" />            <pancakeView:PancakeView                BackgroundGradientEndColor="#1B1B1B"                BackgroundGradientStartColor="#001B293A"                HorizontalOptions="FillAndExpand"                VerticalOptions="FillAndExpand" />            <StackLayout                Margin="5,5,0,0"                HorizontalOptions="StartAndExpand"                Spacing="0"                Orientation="Vertical"                VerticalOptions="StartAndExpand">                <Image                    Aspect="AspectFit"                    HeightRequest="50"                    HorizontalOptions="StartAndExpand"                    VerticalOptions="CenterAndExpand"                    WidthRequest="50">                    <Image.GestureRecognizers>                        <TapGestureRecognizer Tapped="BackButton" />                    </Image.GestureRecognizers>                    <Image.Source>                        <FontImageSource                            FontFamily="{DynamicResource MaterialFontFamily}"                            Glyph="{x:Static font:FontAwesomeIcons.ThinLeft}"                            Size="50"                            Color="Chocolate" />                    </Image.Source>                </Image>                <Label                    Margin="20,15,0,0"                    Padding="0,0,0,0"                    FontAttributes="Bold"                    FontFamily="{DynamicResource VerdanaProRegular}"                    FontSize="30"                    HorizontalOptions="CenterAndExpand"                    Style="{StaticResource LabelStyle}"                    Text="{x:Static helpers:AppResources.Signup}"                    TextColor="Chocolate" />            </StackLayout>            <ScrollView Margin="0,120,0,0">                <StackLayout Padding="30">                    <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Full Name" />                    <StackLayout Orientation="Horizontal">                        <Frame Style="{DynamicResource FrameStyle}">                            <StackLayout Orientation="Horizontal">                                <Image Style="{DynamicResource ImageStyleEntryRegister}">                                    <Image.Source>                                        <FontImageSource                                            FontFamily="{DynamicResource MaterialFontFamily}"                                            Glyph="{x:Static font:FontAwesomeIcons.User}"                                            Size="20"                                            Color="Chocolate" />                                    </Image.Source>                                </Image>                                <renderers:BorderlessEntry MaxLength="15" x:Name="UserName" Style="{DynamicResource BorderlessEntry}" />                            </StackLayout>                        </Frame>                                            </StackLayout>                    <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        x:Name="EmailEntry"                        Style="{StaticResource LabelStyle}"                        Text="{x:Static helpers:AppResources.Mail}" />                    <Frame Style="{DynamicResource FrameStyle}">                        <StackLayout Orientation="Horizontal">                            <Image Style="{DynamicResource ImageStyleEntryRegister}">                                <Image.Source>                                    <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiEmail}"                                        Size="20"                                        Color="Chocolate" />                                </Image.Source>                            </Image>                            <renderers:BorderlessEntry x:Name="EmailAddress" Keyboard="Email" Style="{DynamicResource BorderlessEntry}" />                        </StackLayout>                    </Frame>                    <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="{x:Static helpers:AppResources.PhoneNumber}" />                    <Frame Style="{DynamicResource FrameStyle}">                        <StackLayout Orientation="Horizontal">                            <Image Style="{DynamicResource ImageStyleEntryRegister}">                                <Image.Source>                                    <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiCall}"                                        Size="20"                                                                                Color="Chocolate" />                                </Image.Source>                            </Image>                            <renderers:BorderlessEntry Keyboard="Numeric" x:Name="number" MaxLength="10"  Style="{DynamicResource BorderlessEntry}" />                        </StackLayout>                    </Frame>                <Label                         FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="{x:Static helpers:AppResources.Pass}" />                    <Frame Style="{DynamicResource FrameStyle}">                        <StackLayout Orientation="Horizontal">                            <Image Style="{DynamicResource ImageStyleEntryRegister}">                                <Image.Source>                                    <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiLock}"                                        Size="20"                                        Color="Chocolate" />                                </Image.Source>                            </Image>                        <renderers:BorderlessEntry IsPassword="{Binding Source={x:Reference ShowPasswordActualTrigger}, Path=HidePassword}"                                                   x:Name="Pswd" Style="{DynamicResource BorderlessEntry}" />                        <ImageButton VerticalOptions="Center"                     Margin="0,0,10,0"                     HeightRequest="30"                     HorizontalOptions="End"                     Source="ic_eye_hide">                        <ImageButton.Triggers>                            <EventTrigger Event="Clicked">                                <local:ShowPasswordTriggerAction ShowIcon="ic_eye"                                                                    HideIcon="ic_eye_hide"                                                                    x:Name="ShowPasswordActualTrigger"/>                            </EventTrigger>                        </ImageButton.Triggers>                    </ImageButton>                        </StackLayout>                    </Frame>                <Label x:Name="cfm"                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="{x:Static helpers:AppResources.ConfirmPass}" />                <Frame Style="{DynamicResource FrameStyle}">                    <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiLock}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                        <renderers:BorderlessEntry IsPassword="True" x:Name="cnfm" Style="{DynamicResource BorderlessEntry}" />                    </StackLayout>                </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="{x:Static helpers:AppResources.Address}" />                    <Frame  Style="{DynamicResource FrameStyle}">                          <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.AddressBook}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                        <renderers:BorderlessEntry BackgroundColor="Transparent" x:Name="address"  Style="{DynamicResource BorderlessEntry}" />                              </StackLayout>                    </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="State"/>                <Frame Style="{DynamicResource FrameStyle}">                      <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.BrandPlaystation}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                    <renderers:BorderlessEntry x:Name="statename" Keyboard="Text" BackgroundColor="Transparent"  Style="{DynamicResource BorderlessEntry}" />                     </StackLayout>                </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="City"/>                <Frame  Style="{DynamicResource FrameStyle}">                      <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.Home}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                    <renderers:BorderlessEntry x:Name="cityname" Keyboard="Text"  BackgroundColor="Transparent"  Style="{DynamicResource BorderlessEntry}" />                          </StackLayout>                </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="17"                        Style="{StaticResource LabelStyle}"                        Text="Zip Code"/>                <Frame  Style="{DynamicResource FrameStyle}">                     <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.Barcode}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                    <renderers:BorderlessEntry BackgroundColor="Transparent" Keyboard="Numeric" MaxLength="6"  x:Name="zipcode"   Style="{DynamicResource BorderlessEntry}" />                         </StackLayout>                </Frame>                <Button                        Margin="20"                        BackgroundColor="Chocolate"                        Clicked="RegisteruButtonClick"                        Style="{DynamicResource ButtonStyle}"                        Text="{x:Static helpers:AppResources.Signup}"                        TextColor="White" />                </StackLayout>                      </ScrollView>                   </Grid>  </base:BasePage>