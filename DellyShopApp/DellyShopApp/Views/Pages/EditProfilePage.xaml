<?xml version="1.0" encoding="utf-8" ?><base:BasePage    xmlns="http://xamarin.com/schemas/2014/forms"    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    x:Class="DellyShopApp.Views.Pages.EditProfilePage"    xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"     xmlns:pancakeView="clr-namespace:DellyShopApp.Views.CustomView"    xmlns:font="clr-namespace:DellyShopApp.Helpers;assembly=DellyShopApp"    xmlns:languages="clr-namespace:DellyShopApp.Languages;assembly=DellyShopApp"     xmlns:base="clr-namespace:DellyShopApp.Views.Pages.Base"    xmlns:renderers="clr-namespace:DellyShopApp.Renderers;assembly=DellyShopApp"    BackgroundColor="LightBlue">    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">        <StackLayout                Margin="5,5,0,0"                HorizontalOptions="StartAndExpand"                Spacing="0"                Orientation="Vertical"                VerticalOptions="StartAndExpand">            <Image                    Aspect="AspectFit"                    HeightRequest="50"                    HorizontalOptions="StartAndExpand"                    VerticalOptions="CenterAndExpand"                    WidthRequest="50">                <Image.GestureRecognizers>                    <TapGestureRecognizer Tapped="BackButton" />                </Image.GestureRecognizers>                <Image.Source>                    <FontImageSource                            FontFamily="{DynamicResource MaterialFontFamily}"                            Glyph="{x:Static font:FontAwesomeIcons.ThinLeft}"                            Size="50"                            Color="Black" />                </Image.Source>            </Image>            <Label                    Margin="20,15,0,0"                    Padding="0,0,0,0"                    FontAttributes="Bold"                    FontFamily="{DynamicResource VerdanaProRegular}"                    FontSize="30"                    HorizontalOptions="CenterAndExpand"                    Style="{StaticResource LabelStyle}"                    Text="Edit Profile"                    TextColor="Chocolate" />        </StackLayout>        <ScrollView Margin="0,120,0,0">            <StackLayout Padding="30">                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Change Name"                                                TextColor="Black"                        FontAttributes="Bold"/>                                        <StackLayout Orientation="Horizontal">                    <Frame Style="{DynamicResource FrameStyle}">                        <StackLayout Orientation="Horizontal">                            <Image Style="{DynamicResource ImageStyleEntryRegister}">                                <Image.Source>                                    <FontImageSource                                            FontFamily="{DynamicResource MaterialFontFamily}"                                            Glyph="{x:Static font:FontAwesomeIcons.User}"                                            Size="20"                                            Color="Chocolate" />                                </Image.Source>                            </Image>                            <renderers:BorderlessEntry x:Name="UserName" MaxLength="15"   Style="{DynamicResource BorderlessEntry}" />                        </StackLayout>                    </Frame>                </StackLayout>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Change EMail"                        TextColor="Black"                        FontAttributes="Bold"/>                <Frame Style="{DynamicResource FrameStyle}">                    <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiEmail}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                        <renderers:BorderlessEntry Keyboard="Email" x:Name="EmailAddress"  Style="{DynamicResource BorderlessEntry}" />                    </StackLayout>                </Frame>                <Label                                                FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Change PhoneNumber"                                                TextColor="Black"                        FontAttributes="Bold"/>                <Frame Style="{DynamicResource FrameStyle}">                    <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.UiCall}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                        <renderers:BorderlessEntry Keyboard="Numeric" x:Name="PhoneNumber" MaxLength="10" Style="{DynamicResource BorderlessEntry}" />                    </StackLayout>                </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Change Birthday"                        TextColor="Black"                        FontAttributes="Bold"/>                <Frame Style="{DynamicResource FrameStyle}">                    <StackLayout Orientation="Horizontal">                        <Image Style="{DynamicResource ImageStyleEntryRegister}">                            <Image.Source>                                <FontImageSource                                        FontFamily="{DynamicResource MaterialFontFamily}"                                        Glyph="{x:Static font:FontAwesomeIcons.BirthdayCake}"                                        Size="20"                                        Color="Chocolate" />                            </Image.Source>                        </Image>                        <renderers:BorderlessDatePicker x:Name="BDate"                                FontFamily="{DynamicResource VerdanaProRegular}"                                FontSize="15"                                HorizontalOptions="StartAndExpand"                                TextColor="{DynamicResource EntryTextColor}" />                    </StackLayout>                </Frame>                <Label                        FontFamily="{DynamicResource VerdanaProRegular}"                        FontSize="15"                        Style="{StaticResource LabelStyle}"                        Text="Change Address"                        TextColor="black"                        FontAttributes="Bold"/>                <Frame HeightRequest="100" Style="{DynamicResource FrameStyle}">                    <renderers:BorderlessEditor x:Name="Address" BackgroundColor="Transparent" TextColor="{DynamicResource EntryTextColor}" />                </Frame>                <Button                        Margin="20"                        BackgroundColor="Chocolate"                        Clicked="Button_Clicked"                        Style="{DynamicResource ButtonStyle}"                        Text="Edit Profile"                        TextColor="Black" />            </StackLayout>        </ScrollView>    </Grid></base:BasePage>                                                                              